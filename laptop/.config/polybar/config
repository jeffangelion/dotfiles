menu-1-1-exec = reboot
menu-1-2 = No
menu-1-2-exec = menu-open-0
menu-2-0 = Power off?
menu-2-1 = Yes
menu-2-1-exec = poweroff
menu-2-2 = No
menu-2-2-exec = menu-open-0

[module/i3]
