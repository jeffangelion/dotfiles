modules-right = date xkeyboard pulseaudio backlight wireless-network battery

;;modules
[module/wireless-network]
type = internal/network
interface = wlp1s0
interval = 1.0
ping-interval = 10
format-connected = <ramp-signal>
ramp-signal-0 = .....
ramp-signal-1 = ·....
ramp-signal-2 = ··...
ramp-signal-3 = ···..
ramp-signal-4 = ····.
ramp-signal-5 = ·····
label-disconnected = OFFLINE
label-disconnected-foreground = #66

[module/pulseaudio]
type = internal/pulseaudio
sink = alsa_output.pci-0000_00_1b.0.analog-stereo
use-ui-max = false
label-volume = V%percentage%
label-muted = MUTE

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock
blacklist-1 = scroll lock
format = <label-layout>
format-spacing = 0
label-layout = %icon%
label-layout-background = #bc99ed
label-layout-foreground = #000
layout-icon-0 = us;US
layout-icon-1 = ru;RU

[module/battery]
type = internal/battery
;full-at = 98
battery = BAT0
adapter = AC
time-format = %H:%M
format-charging = <label-charging>
format-discharging = <label-discharging>
label-charging = B%percentage%+
label-discharging = B%percentage%-
label-full = FULL

[module/backlight]
type = internal/xbacklight
card = intel_backlight
enable-scroll = true
format = <bar>
bar-width = 10
bar-indicator = ■
bar-fill = ─
bar-empty = ─

[module/date]
type = internal/date
time = %H:%M:%S
time-alt = %d.%m.%Y
label = %time%

[module/memory]
type = internal/memory
interval = 3
label = M%percentage_used%

[module/cpu]
type = internal/cpu
label = C%percentage%

[module/flameshot]
type = custom/script
exec = echo ■
click-left = "flameshot gui"

[module/powermenu]
