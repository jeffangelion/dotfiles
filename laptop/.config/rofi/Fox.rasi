    T-selected-foreground:       #ffb52aff; /*selected foreground color*/
    T-background-color:          #1E1E1EE0; /*normal   background color*/
    T-background-empty:          #00000000; /*selected background color*/
    T-border-color:              #ffb52aff; /*         border     color*/

    T-red:                       #ff0000ff;
    
    /*???*/
    normal-urgent-foreground:    #ff0000ff;
    selected-urgent-foreground:  #ff0000ff;
    urgent-background:           #ff0000ff;
    
