    lightfg:                     #586875ff;
    alternate-active-background: #27282200;
    bordercolor:                 #002b36ff;
    normal-background:           #27282200;
    alternate-normal-background: #27000000;
    separatorcolor:              #ffb52aff;
    selected-urgent-background:  #f92672ff;
    urgent-background:           #27282200;
